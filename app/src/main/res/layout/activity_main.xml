<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393A3E"
    android:orientation="vertical"
    android:rotation="-360"
    android:rotationX="-360"
    android:rotationY="-360"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1in"
        android:layout_marginTop="150px"
        android:layout_marginBottom="100px"
        android:background="@drawable/conner"></TextView>


    <ImageButton
        android:layout_width="320px"
        android:layout_height="100px"
        android:layout_marginBottom="100px"
        android:layout_marginLeft="270dp"
        android:background="@color/black"></ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="OFF"
                app:backgroundTint="#1C1A1B"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="MRC"
                app:backgroundTint="#1C1A1B"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="M-"
                app:backgroundTint="#1C1A1B"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="M+"
                app:backgroundTint="#1C1A1B"></Button>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                app:backgroundTint="#393A3E"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="%"
                app:backgroundTint="#616266"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="√"
                app:backgroundTint="#616266"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="MC"
                app:backgroundTint="#616266"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="MR"
                app:backgroundTint="#F0616266"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="÷"
                app:backgroundTint="#616266"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="&"
                app:backgroundTint="#616266"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="7"
                app:backgroundTint="#ACB7E3"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="8"
                app:backgroundTint="#ACB7E3"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="9"
                app:backgroundTint="#ACB7E3"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="X"
                app:backgroundTint="#616266"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="$"
                app:backgroundTint="#616266"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="4"
                app:backgroundTint="#ACB7E3"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="5"
                app:backgroundTint="#ACB7E3"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="6"
                app:backgroundTint="#ACB7E3"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="1"
                android:background="@drawable/connerbtn"
                android:text="-"
                app:backgroundTint="#616266"></Button>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5px"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="CE"
                        app:backgroundTint="#FF5722"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="1"
                        app:backgroundTint="#ACB7E3"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="2"
                        app:backgroundTint="#ACB7E3"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="3"
                        app:backgroundTint="#ACB7E3"></Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="ON/C"
                        app:backgroundTint="#FF5722"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="0"
                        app:backgroundTint="#ACB7E3"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="."
                        app:backgroundTint="#ACB7E3"></Button>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:background="@drawable/connerbtn"
                        android:text="="
                        app:backgroundTint="#ACB7E3"></Button>
                </LinearLayout>


            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_weight="4"
                android:background="@drawable/connerbtn"
                android:text="+"
                app:backgroundTint="#616266"></Button>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>